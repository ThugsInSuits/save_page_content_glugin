{
  "name": "save2notion",
  "version": "1.0",
  "description": "You can save content of your choice to Notion.",
  "homepage_url": "插件主页",
  "manifest_version": 3,
  "icons": {
      "16": "assets/logo_16.png",
      "48": "assets/logo_48.png",
      "64": "assets/logo_64.png",
      "128": "assets/logo_128.png"
  },
  "background": {
      "service_worker": "./dist/background.js"
  },
  "action": {
      "default_icon": "assets/logo_128.png",
      "default_popup": "./dist/popup.html"
  },
  "content_scripts": [
      {
          "matches": [
              "http://*/*",
              "https://*/*"
          ],
          "js": [
              "../dist/content.js"
          ],
          "run_at": "document_end"
      }
  ],
  "web_accessible_resources": [
      {
          "resources": [
              "./assets/*"
          ],
          "matches": [
              "http://*/*",
              "https://*/*"
          ]
      }
  ],
  "permissions": [
      "notifications",
      "contextMenus",
      "webRequest",
      "storage",
      "tabs",
      "activeTab"
  ]
}